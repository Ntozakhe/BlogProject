@model BlogProjectPrac7.Models.Category

@{
    ViewData["Title"] = "New Category";
}
<div class="container">
    <div class="col-lg-8 col-md-10 mx-auto">
<h1>New Category</h1>


<div class="row">
    <div class="col-12">
        <form asp-action="Create" asp-controller="Categories">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Enter a Category Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group text-end mt-2">
                <input type="submit" value="Create" class="btn btn-primary rounded-pill btnlinks" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
